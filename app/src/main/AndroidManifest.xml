<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.husni.muyah">
    <!-- Start -->
    <!-- TTS FOR Android 11 Manifest -->
    <queries>
        <intent>
            <action android:name="android.intent.action.TTS_SERVICE" />
        </intent>
    </queries> <!-- End -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/logo_muyah"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_muyah_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KamsiaAppKamusIndonesiaArab">
        <activity
            android:name=".ui.search.SearchActivity"
            android:exported="false" />
        <activity
            android:name=".ui.hospital.HospitalActivity"
            android:exported="true" />
        <activity
            android:name=".ui.market.MarketActivity"
            android:exported="true" />
        <activity
            android:name=".ui.campus.CampusActivity"
            android:exported="true" />
        <activity
            android:name=".ui.splash.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.office.OfficeActivity"
            android:exported="true" />
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="true" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-8778283339841359~7569501351" />
    </application>

</manifest>